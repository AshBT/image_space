.im-image-area
    .im-details(im-id=image.get('id'))
        .im-thumbnail
            img.im-image-thumbnail.im-blur(src=image.get('imageUrl'))
    .im-caption
        .im-caption-content.hidden
            .im-remove.btn.btn-link.btn-lg(im-id=image.get('id'), title="Delete")
                i.icon-trash
            if defaultSimilaritySearch
              .im-find-similar.btn.btn-link.btn-lg(im-id=image.get('id'), title="Find similar images")
                  i.icon-search
            .im-details.btn.btn-link.btn-lg(im-id=image.get('id'), title="Details")
                i.icon-info
